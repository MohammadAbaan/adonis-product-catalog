<!DOCTYPE html>
<html>
<head>
  <title>Product List</title>
  <style>
    body { font-family: sans-serif; margin: 2rem; }
    .product { margin-bottom: 1.5rem; }
    img { max-width: 200px; height: auto; display: block; margin-bottom: 0.5rem; }
    .pagination { margin-top: 2rem; }
    .pagination a {
      padding: 0.5rem 1rem;
      border: 1px solid #ccc;
      margin-right: 0.3rem;
      text-decoration: none;
      color: #333;
    }
    .pagination a.active {
      background: #333;
      color: #fff;
    }
    form { margin-bottom: 2rem; }
    select, input[type="text"], button {
      padding: 0.5rem;
      margin-right: 0.5rem;
    }
  </style>
</head>
<body>
  <h1>Products</h1>

  <form method="GET" action="{{ baseUrl }}">
    <input type="text" name="search" value="{{ search || '' }}" placeholder="Search products...">

    <select name="category">
      <option value="">All Categories</option>
      @each(cat in categories)
        <option value="{{ cat.id }}" {{ categoryFilter == cat.id ? 'selected' : '' }}>
          {{ cat.name }}
        </option>
      @endeach
    </select>

    <button type="submit">Filter</button>
    <button type="submit" name="clear" value="true">Clear Filters</button>
  </form>

  @if(products.total === 0)
    <p>No products found.</p>
  @else
    <ul>
      @each(product in products.all())
        <li class="product">
          <a href="/products/{{ product.id }}">
            <img src="{{ product.imagePath }}" alt="{{ product.name }}">
            <strong>{{ product.name }}</strong>
          </a>
          â€” ${{ product.price }}<br>
          <em>Category:</em> {{ product.category.name }}<br>
          <p>
            {{ product.description.length > 50 ? product.description.substring(0, 50) + '...' : product.description }}
          </p>
        </li>
      @endeach
    </ul>

    <div class="pagination">
      @if(products.currentPage > 1)
        <a href="{{ baseUrl }}?page={{ products.currentPage - 1 }}&search={{ search }}&category={{ categoryFilter }}">&laquo; Prev</a>
      @endif

      @each(pageNumber in [...Array(products.lastPage).keys()].map(i => i + 1))
        <a
          href="{{ baseUrl }}?page={{ pageNumber }}&search={{ search }}&category={{ categoryFilter }}"
          class="{{ products.currentPage === pageNumber ? 'active' : '' }}"
        >
          {{ pageNumber }}
        </a>
      @endeach

      @if(products.currentPage < products.lastPage)
        <a href="{{ baseUrl }}?page={{ products.currentPage + 1 }}&search={{ search }}&category={{ categoryFilter }}">Next &raquo;</a>
      @endif
    </div>
  @endif

</body>
</html>
